<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>LLL:EXT:core/Resources/Private/Language/Form/locallang_tabs.xlf:general</sheetTitle>
                <type>array</type>
                <el>
                    <settings.calendars>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.calendars</label>
                        <config>
                            <type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <minItems>1</minItems>
                            <maxItems>99</maxItems>
                            <itemsProcFunc>Causal\Theodia\Backend\Configuration\TCA\TheodiaCalendarSelector->getAll</itemsProcFunc>
                            <size>10</size>
                        </config>
                    </settings.calendars>
                    <settings.numberOfEvents>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.numberOfEvents</label>
                        <config>
                            <type>input</type>
                            <size>5</size>
                            <eval>int+</eval>
                            <required>1</required>
                            <range>
                                <lower>1</lower>
                                <upper>200</upper>
                            </range>
                            <default>10</default>
                        </config>
                    </settings.numberOfEvents>
                    <settings.showMoreLink>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.showMoreLink</label>
                        <description>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.showMoreLink.description</description>
                        <displayCond><![CDATA[FIELD:settings.iframe:!=:1]]></displayCond>
                        <config>
                            <type>check</type>
                            <renderType>checkboxToggle</renderType>
                        </config>
                    </settings.showMoreLink>
                    <settings.showLocation>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.showLocation</label>
                        <displayCond><![CDATA[FIELD:settings.iframe:!=:1]]></displayCond>
                        <config>
                            <type>check</type>
                            <renderType>checkboxToggle</renderType>
                        </config>
                    </settings.showLocation>
                    <settings.filter>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.filter</label>
                        <description>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.filter.description</description>
                        <displayCond><![CDATA[FIELD:settings.iframe:!=:1]]></displayCond>
                        <config>
                            <type>input</type>
                            <size>20</size>
                            <eval>trim</eval>
                        </config>
                    </settings.filter>
                    <settings.filter_start>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.filter_start</label>
                        <description>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.filter_start.description</description>
                        <displayCond><![CDATA[FIELD:settings.iframe:=:0]]></displayCond>
                        <config>
                            <type>datetime</type>
                            <format>date</format>
                        </config>
                    </settings.filter_start>
                    <settings.filter_end>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.filter_end</label>
                        <description>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.filter_end.description</description>
                        <displayCond><![CDATA[FIELD:settings.iframe:=:0]]></displayCond>
                        <config>
                            <type>datetime</type>
                            <format>date</format>
                        </config>
                    </settings.filter_end>
                    <settings.iframe>
                        <label>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.iframe</label>
                        <description>LLL:EXT:theodia/Resources/Private/Language/locallang_db.xlf:plugins.event.settings.iframe.description</description>
                        <config>
                            <type>check</type>
                            <renderType>checkboxToggle</renderType>
                        </config>
                        <onChange>reload</onChange>
                    </settings.iframe>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
